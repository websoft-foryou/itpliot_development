<% plan = invoice.plan %>
<tr>
  <td><%= invoice.id %></td>
  <td><%= plan.employees_from > Plan::CUSTOMER_MAX_EMPLOYEES ? "> #{plan.employees_from-1}" : "#{plan.employees_from}-#{plan.employees_to} #{t('employees.employees')}" + " | €#{plan.price}" %></td>
  <td><%= l(invoice.issued_date, format: :long) %></td>
  <td><%= l(invoice.due_date, format: :long) %></td>
  <td>€<%= plan.price %></td>
  <td><%= t('invoice.statuses.status_'+invoice.status_name.to_s) %></td>
</tr>