<div class="row">
  <div class="col-md-12">
    <div style="max-width:450px;margin:0 auto;position:relative;left:-100px;">

      <br/>
      <h3><%= t("users.invitation.basic_info.header_html", first_name: resource.first_name)%></h3>
      <br/>
      <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>

        <%= f.hidden_field :invitation_token %>
        
        <div class="form-group">
          <%= f.label :password, t('users.invitation.basic_info.password') %>
          <%= f.password_field :password , class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, t('users.invitation.basic_info.password_confirmation') %>
          <%= f.password_field :password_confirmation , class: "form-control" %>
        </div>

        <p class="input_note m-b">*<%= t('users.invitation.basic_info.password_note') %></p>

        <div><%= f.submit t('users.invitation.basic_info.submit_btn'), class: "btn btn-primary" %></div>

        <p></p>
      <% end %>

    </div>
  </div>
</div>