</div>
<div class="form-group">
  <%= f.label :email, t('companies.form.email')+"*",class: "control-label col-sm-3 col-xs-12 p-r-none" %>
  <div class="col-sm-9 col-xs-12"><%= f.text_field :email, class: "form-control" %></div>
</div>
<div class="form-group">
  <%= f.label :invoice_email, class: "control-label col-sm-3 col-xs-12 p-r-none" do %>
    <i class="fa fa-info-circle vertical-top" title="<%= t("companies.form.invoice_email_usage_description")%>" data-toggle="tooltip"></i> <%= t('companies.form.invoice_email')+"*" %>
  <% end %>
  <div class="col-sm-9 col-xs-12"><%= f.text_field :invoice_email, class: "form-control" %></div>
</div>

