<div class="form-group">
  <%= f.label :name, t('branches.form.name')+' *', class: "control-label col-sm-2" %>
  <div class="col-sm-10">
    <%= f.text_field :name, class: "form-control", placeholder: "" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :description, t('branches.form.description'), class: "control-label col-sm-2" %>
  <div class="col-sm-10">
    <%= f.text_field :description, class: "form-control", placeholder: "" %>
  </div>
</div>


<%= f.fields_for :location, f.object.location.present? ? f.object.location.address : Location.new do |f_loc| %>

  <div class="form-group m-b-none">
    <div class="col-sm-5 col-sm-offset-2">
      <h4 class="m-b-none"><%= t('branches.branches_address') %></h4>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :search_address, t('branches.form.search_address'),class: "control-label col-sm-2" %>
    <div class="col-sm-5">
      <input id="addresspicker_map" class="form-control" autocomplete="off">
      <div class="row">
        <div class="col-sm-6"> <small><%= t('branches.form.street_city_country') %></small> </div>
        <div class="col-sm-6 text-right"> <small>powered by </small><%= image_tag 'icons/ic_google.png'%> </div>
      </div>
    </div>
  </div>

  <div class="form-group m-b-none">
    <%= f.label :address, t('branches.form.address')+' *', class: "control-label col-sm-2" %>
    <div class="col-sm-5">
      <%= f_loc.text_field :address, class: "form-control", placeholder: "", id: "pick_address" %>
    </div>
  </div>

  <div class="form-group">
      <%= f_loc.label :zip, t('companies.form.zip')+' *', class: "control-label col-sm-2" %>
      <div class="col-xs-5">
          <%= f_loc.text_field :zip, class: "form-control", placeholder: "", id: "postal_code" %>
      </div>
  </div>

  <div class="form-group m-b-none">
    <%= f.label :city, t('branches.form.city')+' *', class: "control-label col-sm-2" %>
    <div class="col-sm-5">
      <%= f_loc.text_field :city, class: "form-control", placeholder: '', id: "pick_city" %>
    </div>
  </div>

  <div class="form-group m-b-none">
    <%= f.label :country, t('branches.form.country')+' *', class: "control-label col-sm-2" %>
    <div class="col-sm-5">
      <%= f_loc.text_field :country, class: "form-control", placeholder: '', id: "pick_country" %>
    </div>
  </div>

  <div class="form-group m-b-none">
    <%= f.label :latitude, t('branches.form.latitude'), class: "control-label col-sm-2" %>
    <div class="col-sm-5">
      <%= f_loc.text_field :latitude, class: "form-control", placeholder: "", id: "pick_latitude" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :longitude, t('branches.form.longitude'), class: "control-label col-sm-2" %>
    <div class="col-sm-5">
      <%= f_loc.text_field :longitude, class: "form-control", placeholder: "", id: "pick_longitude" %>
    </div>
  </div>
  
    
    <%= hidden_field_tag :zoom, value: 4 %>
<% end %>
