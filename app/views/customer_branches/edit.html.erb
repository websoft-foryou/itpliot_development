<%= content_for :header_scripts do %>
    <%= javascript_include_tag "http://maps.google.com/maps/api/js?key=AIzaSyAbR_28tEZPVOxE3gtkXpo8-FS2ZtjfUFM" %>
<% end %>

<% unless current_company.is_customer? %>
  <%= breadcrumb(links: [
                {key: 'customers', name: t('customers.customers'), url: company_customers_path(@customer_branch.company)},
                {key: 'customer', name: @customer_branch.company.name, url: customer_path(@customer_branch.company)},
                {key: 'location', name: @customer_branch.name, url: customer_customer_branch_path(@customer_branch.company.id, @customer_branch)},
                {key: '', name: t('commons.editing')}
                ]) %>
<% end %>

<h3 class="page-header"><%= t('branches.edit_the_branch') %></h3>
<div class="panel">
  <div class="panel-body main-panel">

    <div class="row">
      <div class="col-md-8 col-md-offset-1">

        <%= form_for @customer_branch, url: customer_customer_branch_path(@customer, @customer_branch), validate: true, html: {class: "form-horizontal"} do |f|%>
          
          <%= render partial: 'form', locals: {f: f} %>

          <div class="form-group">
            <div class="col-sm-10 col-md-offset-2">
              <%= f.submit t('commons.save'), class: "btn btn-primary"%>
              <%= link_to t('commons.cancel'), customer_customer_branches_path(@customer), class: 'btn btn-default' %>
              <%= link_to t('commons.delete'), customer_customer_branch_path(@customer_branch.company), method: :delete, class: "btn btn-default", data: { confirm: t('commons.are_you_sure') } %>
            </div>
          </div>
        <% end %>
      </div>
<!--map-->
    </div>

  </div>
</div>







